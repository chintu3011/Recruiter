<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout"
        android:background="@drawable/halfcircleback"
        tools:context=".authentication.LoginActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/appName"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/emploihunt_white"
               />

            <ImageView
                android:id="@+id/phoneImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@id/appName"
                android:src="@drawable/phone"

                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneImg"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phoneImg"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/otp_verification"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_25sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phoneImg"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="@dimen/_9sdp"
                        android:text="@string/we_will_send_you_a_6_digit_one_time_password_to_this_number"
                        android:textColor="@color/dark_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/cpp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:ccpDialog_keyboardAutoPopup="false"
                            app:ccp_autoDetectCountry="true"
                            app:ccp_autoFormatNumber="true"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_2sdp"
                            app:ccp_contentColor="@color/black"
                            app:ccp_defaultNameCode="IND"
                            app:ccp_showArrow="true"
                            app:ccp_showFlag="false"
                            app:ccp_showFullName="false"
                            app:ccp_textSize="@dimen/_13sdp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textResidentialCity"
                            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone Number"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            android:padding="0dp"
                            app:boxBackgroundColor="#FFFFFF"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                            app:boxCornerRadiusTopStart="@dimen/_5sdp"
                            app:boxStrokeColor="@color/blue"
                            app:endIconCheckable="true"
                            app:endIconMode="clear_text"
                            android:maxLength="10"
                            app:endIconTint="@color/grey"
                            app:hintTextColor="@color/blue"
                            app:layout_constraintBottom_toTopOf="@+id/textLayoutEmployeeNeed"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textLayoutSalary"
                            app:placeholderText="98257*****"
                            app:startIconDrawable="@drawable/baseline_phone_24"
                            app:startIconTint="@color/blue">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phoneNo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="phone"
                                android:maxLength="11"
                                android:textSize="@dimen/_13sdp"
                                android:padding="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        app:backgroundTint="@null"
                        android:background="@drawable/btn_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Login"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:cornerRadius="30dp"
                        app:rippleColor="@color/glass_color" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:progressBarStyleInverse"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/bottomnav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnLogin"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/UsertextView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="Not A Member?"
                            android:textSize="@dimen/_12sdp"
                            tools:layout_editor_absoluteX="94dp"
                            tools:layout_editor_absoluteY="686dp" />

                        <TextView
                            android:id="@+id/btnRegistration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/UsertextView5"
                            android:gravity="center"
                            android:text="  Register Now"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp"
                            tools:layout_editor_absoluteX="94dp"
                            tools:layout_editor_absoluteY="686dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>