<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="jobSeekerAdapter"
            type="com.amri.emploihunt.recruiterSide.HomeRecruitFragment.JobSeekerAdapter" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".recruiterSide.HomeRecruitFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/startGuildLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/_5sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/endGuildLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/_5sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/topGuildLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/_10sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottomGuildLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="@dimen/_10sdp" />

            <TextView
                android:id="@+id/textMsg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:text="@string/filter_applications_here"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="textStart"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/topGuildLine"
                app:layout_constraintStart_toEndOf="@id/startGuildLine"
                app:layout_constraintEnd_toStartOf="@id/btnFilter"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnFilter"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:backgroundTint="@color/white"
                app:borderWidth="0dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_filter_list"
                app:fabCustomSize="@dimen/_35sdp"
                style="@style/FloatingActionButtonStyle"
                app:layout_constraintTop_toTopOf="@+id/textMsg"
                app:layout_constraintBottom_toBottomOf="@+id/textMsg"
                app:layout_constraintEnd_toStartOf="@id/endGuildLine"
                app:layout_constraintStart_toEndOf="@id/textMsg" />


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/textMsg"
                app:layout_constraintStart_toEndOf="@id/startGuildLine"
                app:layout_constraintEnd_toStartOf="@id/endGuildLine"
                app:layout_constraintBottom_toTopOf="@id/layProgressPagination">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/jobSeekerListRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:verticalSpacing="@dimen/_5sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:adapter="@{jobSeekerAdapter}"
                    tools:itemCount="5"
                    android:visibility="gone"
                    android:paddingBottom="@dimen/_5sdp"
                    tools:listitem="@layout/singlerowjs"/>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <include
                android:id="@+id/layProgressPagination"
                layout="@layout/layout_progress_pagination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/bottomGuildLine" />
            <include
                android:id="@+id/layEmptyView"
                layout="@layout/layout_empty_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progress_circular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/swipeRefreshLayout"
                app:layout_constraintBottom_toBottomOf="@id/swipeRefreshLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:indeterminateTint="@color/colorPrimary"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>