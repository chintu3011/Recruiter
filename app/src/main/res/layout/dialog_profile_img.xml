<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/profileImgLodding"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/image_lodding"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@+id/profileImg"
        app:layout_constraintBottom_toBottomOf="@id/profileImg"
        app:layout_constraintStart_toStartOf="@id/profileImg"
        app:layout_constraintEnd_toEndOf="@id/profileImg"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_20sdp"
        android:elevation="@dimen/_3sdp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnChangeImg"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/profile_default_image" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btnChangeImg"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:elevation="@dimen/_7sdp"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/profileImg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/profileImg"
        app:layout_constraintTop_toBottomOf="@+id/profileImg"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/default_change_banner_img"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="@dimen/_5sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>