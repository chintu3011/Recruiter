<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".settings.SettingJobSeekerFragment">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:visibility="gone"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="center"
                android:id="@+id/ivBack"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/ic_back" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textColor="@color/black"
                
                android:textSize="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="center"
                android:id="@+id/ivLogout"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/ic_logout" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlProfile"
            android:background="@drawable/spinner_border_bg"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileIv"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                app:shapeAppearanceOverlay="@style/circle"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/profile_default_image"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/profileIv"
                app:layout_constraintBottom_toTopOf="@+id/tvCompany"
                app:layout_constraintStart_toEndOf="@id/profileIv"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Chintan Patel"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCompany"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/userName"
                app:layout_constraintStart_toEndOf="@id/profileIv"
                app:layout_constraintBottom_toBottomOf="@id/profileIv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:text="Amri system"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/grey" />
-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_ApplyList"
            android:background="@drawable/spinner_border_bg"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:id="@+id/ivApply"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:tint="@color/blue"
                android:src="@drawable/baseline_person_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_applylist"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_toEndOf="@+id/ivApply"
                android:layout_centerVertical="true" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:padding="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:tint="@color/colorPrimary"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border_bg"
            android:id="@+id/rlJobPreference"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:id="@+id/ivPreference"
                android:layout_centerVertical="true"
                android:tint="@color/blue"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/baseline_app_settings_alt_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/job_preference"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                
                android:textSize="@dimen/_12sdp"
                android:layout_toEndOf="@+id/ivPreference"
                android:layout_centerVertical="true" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:padding="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:tint="@color/colorPrimary"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border_bg"
            android:id="@+id/rlSaveJob"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:id="@+id/ivSaveJob"
                android:layout_centerVertical="true"
                android:tint="@color/blue"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/baseline_save_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_job"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                
                android:textSize="@dimen/_12sdp"
                android:layout_toEndOf="@+id/ivSaveJob"
                android:layout_centerVertical="true" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:padding="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:tint="@color/colorPrimary"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border_bg"
            android:layout_marginStart="@dimen/_5sdp"
            android:id="@+id/rlContactUs"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:id="@+id/ivContactUs"
                android:layout_centerVertical="true"
                android:tint="@color/blue"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/baseline_call_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                
                android:textSize="@dimen/_12sdp"
                android:layout_toEndOf="@+id/ivContactUs"
                android:layout_centerVertical="true" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:padding="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:tint="@color/colorPrimary"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border_bg"
            android:id="@+id/rlPolicy"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:id="@+id/ivPrivacy"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:tint="@color/blue"
                android:src="@drawable/baseline_admin_panel_settings_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                
                android:textSize="@dimen/_12sdp"
                android:layout_toEndOf="@+id/ivPrivacy"
                android:layout_centerVertical="true" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:padding="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border_bg"
            android:id="@+id/rlterms"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:id="@+id/ivTerms"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:tint="@color/blue"
                android:src="@drawable/baseline_import_contacts_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_amp_amp_condition"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"

                android:textSize="@dimen/_12sdp"
                android:layout_toEndOf="@+id/ivTerms"
                android:layout_centerVertical="true" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:padding="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:tint="@color/colorPrimary"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </RelativeLayout>

    </LinearLayout>
</layout>