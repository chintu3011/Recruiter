<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/qualification"
        style="@style/spinnerStyle"
        app:smsp_hint="Qualification"
        app:smsp_hintColor="@color/blue"
        app:smsp_isOutlined="false"
        app:smsp_outlinedBoxColor="@color/black"
        app:smsp_outlinedBoxRadius="@dimen/_4sdp"
        app:smsp_outlinedHintPadding="4dp"
        app:smsp_outlinedHintStartX="10dp"
        app:smsp_outlinedStrokeWidth="1dp"
        app:smsp_isSearchable="true"
        app:smsp_multilineError="true"
        app:smsp_searchHeaderTextColor="#ffff"
        app:smsp_searchHintColor="@color/search_hint_color"
        app:smsp_searchTextColor="@color/search_text_color"
        android:layout_margin="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="@dimen/_200sdp"
        android:fadeScrollbars="false"
        android:layout_margin="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qualification"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:scrollbars="horizontal" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>