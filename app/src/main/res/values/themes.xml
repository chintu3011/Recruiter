<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Recruiter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Recruiter" parent="Base.Theme.Recruiter" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/freshwost_regular</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>
    <style name="cornerCut">
        <item name="cornerSize">30%</item>
    </style>
    <style name="cornerCut_1">
        <item name="cornerSize">15%</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="custom_menu" parent="Widget.AppCompat.Light.ActionButton.Overflow" >
        <!--        <item name="android:textColor">@color/white</item>-->
        <!--        <item name="android:textSize"> @dimen/_20sdp</item>-->
        <!--        <item name="android:background">@drawable/top_card_bg</item>-->
        <item name="tint" > @color/white</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabCustomStyle</item>
    </style>

    <style name="FabCustomStyle" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">20%</item>
        <item name="cornerFamily">rounded</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

</resources>