<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page_fragment_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.amri.emploihunt.jobSeekerSide.HomeJobSeekerFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home_job_seeker" >
        <action
            android:id="@+id/action_homeFragment_to_postFragment"
            app:destination="@id/postFragment" />
    </fragment>
    <fragment
        android:id="@+id/postFragment"
        android:name="com.amri.emploihunt.recruiterSide.PostRecruitFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post_recruit" >
        <action
            android:id="@+id/action_postFragment_to_profileFragment" />
    </fragment>

</navigation>